generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id         String      @id @default(cuid())
  email      String      @unique
  firstname  String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  lastname   String?
  nic        String?
  nic_pic    String?
  birthDate  DateTime?
  mobile     String?
  address    String?
  role       UserRole?
  activeStatus Boolean     @default(true)
  password   String

}


enum UserRole {
  ADMIN
  PARENT
  SERVICE
  DRIVER
  TEACHER
}